@model ApplicationCore.Models.UserDetailsModel


@{
    ViewData["Title"] = "Profile";
}

<h3>Your Profile</h3>
<hr/>
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Profile" id="profileForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <p asp-for="FirstName" class="form-control">
                    @Model.FirstName
                </p>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <p asp-for="LastName" class="form-control">
                    @Model.LastName
                </p>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <p asp-for="DateOfBirth" class="form-control">
                    @Model.DateOfBirth
                </p>
            </div>
            <div class="form-group">
                <button type="button" value="EditProfile" class="btn btn-primary">
                    Edit Profile
                </button>
            </div>
        </form>
    </div>
</div> 
