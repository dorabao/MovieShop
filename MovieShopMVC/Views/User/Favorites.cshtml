@model IEnumerable<ApplicationCore.Models.MovieCardResponseModel>

@{
    ViewData["Title"] = "Favorites";
}


<div class="container-fluid">
    <div class="row">
        @foreach (var movie in Model) //Model is the allians of above mentioned IEnumerable
        {
            //call the partical view and pass the model to the partical view
            <div class="col-xl-2 col-sm-4 col-lg-3 col-6">  
                <partial model="movie" name="_MovieCard" /> 
            </div>
        }
    </div>
</div>
