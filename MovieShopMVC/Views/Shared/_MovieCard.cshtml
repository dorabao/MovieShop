@model ApplicationCore.Models.MovieCardResponseModel

@*
//when click on the poster, we can view the movie details(Movie Controller and Details Action)
//http://localhost/movies/details/(id)
//pass by the movie id
//use TAG HELPERS aspXXX
*@

<div class="card mb-4 shadow bg-light">
    <a asp-controller="Movie" asp-action="Details" asp-route-id="@Model.Id">
        <img src="@Model.PosterUrl" class="img-fluid" alt="@Model.Title" />
    </a>
</div>
