@model ApplicationCore.Models.MovieDetailsResponseModel

@*Display movie details(movie info/cast info/poster/rating)*@

<html>
    <head>
        <style>
            .banner {
                height: 150px;
                max-width:100%; 
                margin:auto;
                background-size: cover; 
                background-position: center;
                position: relative;
            }
        </style>
    </head>
    <body>
        <nav class="navbar navbar-dark bg-dark navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    Movie Shop
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                GENRES
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li><a class="dropdown-item" href="#">ACTION</a></li>
                                <li><a class="dropdown-item" href="#">ADVENTURE</a></li>
                                <li><a class="dropdown-item" href="#">ANIMATION</a></li>
                                <li><a class="dropdown-item" href="#">COMEDY</a></li>
                                <li><a class="dropdown-item" href="#">CRIME</a></li>
                                <li><a class="dropdown-item" href="#">DOCUMENTRAY</a></li>
                                <li><a class="dropdown-item" href="#">DRAMA</a></li>
                                <li><a class="dropdown-item" href="#">FAMILY</a></li>
                                <li><a class="dropdown-item" href="#">FANTASY</a></li>
                                <li><a class="dropdown-item" href="#">FOREIGN</a></li>
                                <li><a class="dropdown-item" href="#">HISTORY</a></li>
                                <li><a class="dropdown-item" href="#">HORROR</a></li>
                                <li><a class="dropdown-item" href="#">MUSIC</a></li>
                                <li><a class="dropdown-item" href="#">MYSTERY</a></li>
                                <li><a class="dropdown-item" href="#">ROMANCE</a></li>
                                <li><a class="dropdown-item" href="#">SCIENCE FICTION</a></li>
                                <li><a class="dropdown-item" href="#">THRILLER</a></li>
                                <li><a class="dropdown-item" href="#">TV MOVIE</a></li>
                                <li><a class="dropdown-item" href="#">WAR</a></li>
                                <li><a class="dropdown-item" href="#">WESTERN</a></li>
                            </ul>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <ul class="form-inline me-auto mb-lg-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: gray">
                                Karen Hettinger
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <li><a class="dropdown-item" href="#">Movies</a></li>
                                    <li><a class="dropdown-item" href="#">Favorites</a></li>
                                    <li><a class="dropdown-item" href="#">Account</a></li>
                                    <li><a class="dropdown-item" href="#">Log Out</a></li>
                                </ul>
                            </li>
                        </ul>
                    </form>
                </div>
            </div>
        </nav>
        <section class="-moz-text-size-adjust">
            <article class="row banner" style="background: linear-gradient( rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8) ), url('@Model.BackdropUrl') no-repeat">
                <div class="col-4" style="text-align:center">
                    <div class="card" style="width: 180px; margin:auto">
                        <img class="card-img-top" src="@Model.PosterUrl" style="height:248px" alt="@Model.BackdropUrl">
                    </div>
                </div>
                <div class="col-6">
                    <h3 style="color:white">@Model.Title</h3> 
                    <p style="color:gray; font-size:10px">@Model.Tagline</p>
                    <p style="color:gray; font-size:12px">
                        <b>@Model.RunTime | @Model.ReleaseDate </b> &nbsp; &nbsp;
                        @foreach(var genre in Model.Genres)
                        {
                            <span class="badge rounded-pill bg-secondary">@genre.Name</span>
                        }
                    </p>
                    <p>
                        <span class="badge bg-success">@Model.Rating</span>
                    </p>
                    <p style="color:white; font-size:12px">@Model.Overview</p>
                </div>
                <div class="col-2" style="font-size:14px">
                    <p style="padding-top: 50px">
                        <a href="#" class="btn btn-outline-light disabled" tabindex="-1" role="button" aria-disabled="true" style="width:100px">REVIEW</a>
                    </p>
                    <p>
                        <a href="#" class="btn btn-light disabled" tabindex="-1" role="button" aria-disabled="true" style="width:100px">BUY $@Model.Price</a>
                    </p>
                </div>
            </article>
            <article class="row" style="margin-left:1%; margin-right:1%">
                <div class="col-4 bg-light">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-light"><h5>MOVIE FACTS</h5></li>
                        <li class="list-group-item border-bottom-2 bg-light">
                             Release Date
                             <span class="badge badge-pill bg-dark">@Model.ReleaseDate</span>
                        </li>
                        <li class="list-group-item border-bottom-2 bg-light">
                             Run Time 
                             <span class="badge badge-pill bg-dark">@Model.RunTime m</span>
                        </li>
                        <li class="list-group-item border-bottom-2 bg-light">
                             Box Office 
                             <span class="badge badge-pill bg-dark">$@Model.Revenue</span>
                        </li>
                        <li class="list-group-item border-bottom-2 bg-light">
                             Budget 
                             <span class="badge badge-pill bg-dark">$@Model.Budget</span>
                        </li>
                    </ul>
                    <br />
                    <br />
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-light"><h5>TRAILERS</h5></li>
                        @foreach(var trailer in Model.Trailers)
                        {
                            <li class="list-group-item border-bottom-0 bg-light">
                                <a href="@trailer.TrailerUrl" class="btn btn-outline-light disabled" role="button" style="width:50px">
                                    @trailer.Name
                                </a> 
                            </li>                
                        }
                    </ul>
                </div>
                <aside class="col">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><h5>CAST</h5></li>
                        @foreach(var cast in Model.Casts)
                        {
                            <li class="list-group-item"> 
                                <ul class="list-group list-group-horizontal list-group-flush">
                                    <li class="list-group-item border-0" style="width: 20%">
                                        <img src = "@cast.PosterUrl" class="rounded-circle" style="width:40%; margin-right: 30px" />
                                    </li>
                                    <li class="list-group-item border-0" style="width: 40%">@cast.Name</li>
                                    <li class="list-group-item border-0">@cast.Character</li>
                                </ul>
                            </li>
                        }    
                    </ul>
                </aside>
            </article>
        </section>
    </body>
</html>